@using School.BLL.DTO
@model ClassSubjectDTO

@{
    ViewData["Title"] = "Create Lesson";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Create lesson</h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" method="Post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ClassId" class="control-label">Class</label>
                        <select asp-for="ClassId" asp-items="Model.Classes" class="form-control">
                            <option selected="@Model.ClassId"></option>
                        </select>
                        <span asp-validation-for="ClassId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubjectId" class="control-label">Subject</label>
                        <select asp-for="SubjectId" asp-items="Model.Subjects" class="form-control">
                            <option>-- Select subject --</option>
                        </select>
                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeacherId" class="control-label">Teacher</label>
                        <select asp-for="TeacherId" asp-items="Model.Teachers" class="form-control">
                            <option>-- Select teacher --</option>
                        </select>
                        <span asp-validation-for="TeacherId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input class="btn btn-outline-success float-right" type="submit" value="Save" />
                        <a class="btn btn-outline-secondary" asp-controller="Class" asp-action="Detail" asp-route-classId="@Model.ClassId">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>