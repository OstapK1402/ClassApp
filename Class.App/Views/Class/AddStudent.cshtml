@using School.App.Models
@model AddStudentViewModel

@{
    ViewData["Title"] = "Add Student to Class";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h4>Add Student to Class</h4>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }

        <form asp-action="AddStudent" method="post">
            <div class="form-group">
                <label asp-for="ClassId" class="control-label">Class</label>
                <select asp-for="ClassId" asp-items="Model.Classes" class="form-control" readonly></select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student</label>
                <select asp-for="StudentId" asp-items="Model.Students" class="form-control" readonly>
                    <option>-- Select student --</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-success float-right">Add Student</button>
                <a class="btn btn-outline-secondary" asp-controller="Class" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>