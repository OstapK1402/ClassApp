@using School.BLL.DTO
@model HomeworkDTO

@{
    ViewData["Title"] = "Edit Homework";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Edit Homework</h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" method="Post" enctype="multipart/form-data">
                    <input type="hidden" name="HomeworkId" value="@Model.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Class.Name" class="control-label"></label>
                        <input asp-for="Class.Name" class="form-control" readonly>
                        <span asp-validation-for="Class.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Subject.Name" class="control-label"></label>
                        <input asp-for="Subject.Name" class="form-control" readonly>
                        <span asp-validation-for="Subject.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Teacher.FullName" class="control-label"></label>
                        <input asp-for="Teacher.FullName" class="form-control" readonly>
                        <span asp-validation-for="Teacher.FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Title</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DueDate" class="control-label">Due Date</label>
                        <input asp-for="DueDate" type="date" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Save" />
                        <a class="btn btn-outline-secondary" asp-controller="Lesson" asp-action="Detail"
                           asp-route-classId="@Model.ClassId" asp-route-subjectId="@Model.SubjectId">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>